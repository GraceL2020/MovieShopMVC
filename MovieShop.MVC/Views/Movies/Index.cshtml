@model List<MovieShop.Entities.Movie>

@{ 
    ViewBag.Title = "Index";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Top Revenue Movies, Grace</h1>

<table class="table">
    <tr>
        <td>Id</td>
        <td>Title</td>
        <td>Revenue</td>
        <td>Budget</td>
    </tr>

    <tbody>
        @foreach(var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@movie.Title</td>
                <td>@movie.Revenue</td>
                <td>@movie.Budget</td>
            </tr>
        }
    </tbody>
</table>